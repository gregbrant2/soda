{{ extends "soda.jet" }}

{{block head()}}
    <title>Dashboard - Soda</title>
{{end}}

{{block subheader()}}
<h2>Databases</h2>
{{end}}

{{block body()}}
<article class="layout--flow">
<h3>Databases</h3>
    <div class="layout--flow">
        <div class="table-wrapper">
            <table>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Server</th>
                    <th>Status?</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Databases }}
                    <tr>
                        <td><a href="/databases/{{ .Id }}">{{ .Name }}</a></td>
                        <td>{{ .Server }}</td>
                        <td>{{ . }}</td>
                    </tr>
                {{ end }}
                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
    </div>

    <footer>
        <a href="/database/new" class="button">New database</a>
    </footer>
</article>

<article class="layout--flow">
<h3>Servers</h3>
    <div class="layout--flow">
        <div class="table-wrapper">
            <table>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>IP Address</th>
                    <th>Port</th>
                    <th>Status?</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Servers }}
                    <tr>
                        <td><a href="/servers/{{ .Id }}">{{ .Name }}</a></td>
                        <td>{{ .Type }}</td>
                        <td>{{ .IpAddress }}</td>
                        <td>{{ .Port }}</td>
                        <td>{{ . }}</td>
                    </tr>
                {{ end }}
                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
    </div>

    <footer>
        <a href="/servers/new" class="button">Add server</a>
    </footer>
</article>
{{end}}